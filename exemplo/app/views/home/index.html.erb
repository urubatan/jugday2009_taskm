<script type="text/javascript">
$(function() {
		$("#status0").sortable({
			revert: true,
			stop: function(event,ui){
				$.post('/home/change_status',{task_id:ui.item.attr('id'),status:0});
			}
		});
		$("#status1").sortable({
			revert: true,
			stop: function(event,ui){
				$.post('/home/change_status',{task_id:ui.item.attr('id'),status:1});
			}
		});
		$("#status2").sortable({
			revert: true,
			stop: function(event,ui){
				$.post('/home/change_status',{task_id:ui.item.attr('id'),status:2});
			}
		});
		$("#status3").sortable({
			revert: true,
			stop: function(event,ui){
				$.post('/home/change_status',{task_id:ui.item.attr('id'),status:3});
			}
		});
		$(".draggable").draggable(
		{
			connectToSortable:'.target'
		}
		)
	});

</script>
<div  style="float:left;width:23%;background-color:green;min-height:700px" id="status0" class="target">
<% @ns_tasks.each do |t| %>
<div class="draggable" id="task<%= t.id %>" style="background-color:blue;margin:5 5 5 5;">
<h2><%=h t.title%></h2>
<%= h t.description %>
</div>
<% end %>
</div>
